<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="276dp"
        android:layout_height="273dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/txtdescripcion"
        android:layout_width="354dp"
        android:layout_height="93dp"
        android:layout_above="@+id/btnsave"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="22dp"
        android:background="#80A6E7"
        android:backgroundTint="#D3D2D2"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="start|top"
        android:hint="Ingrese una descripciÃ³n de esta imagen"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="149dp"
        android:layout_height="43dp"
        android:layout_below="@+id/btnfoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="235dp"
        android:fontFamily="@font/roboto"

        android:text="@string/txttext"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#9714B3DB"
        android:text="@string/btnsave"
        android:textColor="#1D1B1B"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_save"
        app:iconSize="30dp"
        app:iconTint="#020202" />

    <Button
        android:id="@+id/btnfoto"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="88dp"
        android:backgroundTint="#9714B3DB"
        android:text="@string/btnfoto"
        android:textColor="#1D1B1B"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconSize="30dp"
        app:iconTint="#020202" />

</RelativeLayout>